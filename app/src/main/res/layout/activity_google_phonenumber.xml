<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context="com.techifuzz.team.vitsharecar.Google_phonenumber">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutnumber12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#444444"
        android:textColorHint="#444444"
        android:layout_centerVertical="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/textInputEditTextnumber12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:backgroundTint="#444444"
            android:textColor="#444444"
            android:textColorHint="#444444"
            android:inputType="number"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/button_number"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textInputLayoutnumber12"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/button"
        android:text="Next"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />


</RelativeLayout>
